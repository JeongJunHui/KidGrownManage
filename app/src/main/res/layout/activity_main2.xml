<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jeongjunhui.myapplication.Main2Activity">

    <ImageView
        android:id="@+id/tempView"
        android:layout_width="170dp"
        android:layout_height="185dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/humiView"
        android:layout_toRightOf="@+id/humiView"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/name_txt"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/result_view"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="215dp" />

    <EditText
        android:id="@+id/age_txt"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/weight_txt"
        android:layout_alignStart="@+id/name_txt"
        android:layout_marginBottom="25dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="276dp" />

    <EditText
        android:id="@+id/weight_txt"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tall_btn"
        android:layout_alignStart="@+id/age_txt"
        android:layout_marginBottom="11dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="338dp" />

    <TextView
        android:id="@+id/result_view"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:layout_alignEnd="@+id/tempView"
        android:layout_below="@+id/tempView"
        android:layout_marginTop="20dp"
        android:text="측정 결과"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="215dp"
        android:textColor="#000000"

        android:textSize="45px" />

    <Button
        android:id="@+id/save_btn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/result_view"
        android:layout_below="@+id/result_view"
        android:text="저장"
        tools:layout_editor_absoluteX="214dp"
        tools:layout_editor_absoluteY="447dp" />

    <Button
        android:id="@+id/tall_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/weight_txt"
        android:layout_alignStart="@+id/weight_txt"
        android:layout_below="@+id/result_view"
        android:text="키 측정" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/name_txt"
        android:layout_alignBottom="@+id/name_txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="이름"
        android:textColor="#000000"
        android:textSize="45px" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/age_txt"
        android:layout_alignBottom="@+id/age_txt"
        android:layout_alignStart="@+id/textView4"
        android:textSize="45px"
        android:textColor="#000000"
        android:text="나이" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/weight_txt"
        android:layout_alignBottom="@+id/weight_txt"
        android:layout_alignStart="@+id/textView5"
        android:text="체중"
        android:textColor="#000000"
        android:textSize="45px" />

    <ImageView
        android:id="@+id/humiView"
        android:layout_width="170dp"
        android:layout_height="185dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/ic_launcher" />

</RelativeLayout>
